{
	"name": "turtle-theme",
	"displayName": "Turtle Theme Collection",
	"version": "5.0.5",
	"publisher": "CiberTurtle",
	"description": "A collection of themes by a turtle, for turtles",
	"icon": "images/icon.png",
	"repository": "https://github.com/rylydou/turtle-theme",
	"bugs": "https://github.com/rylydou/turtle-theme/issues",
	"homepage": "https://github.com/rylydou/turtle-theme",
	"license": "MIT",
	"categories": [
		"Themes"
	],
	"keywords": [
		"icons",
		"sharp",
		"icon theme",
		"customization",
		"theme",
		"file icons"
	],
	"galleryBanner": {
		"color": "#cd6093",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.0.0"
	},
	"contributes": {
		"themes": [
			{
				"label": "Turtle Theme - Zughy Dark",
				"uiTheme": "vs-dark",
				"path": "./themes/zughy-dark.json"
			},
			{
				"label": "Turtle Theme - Zughy Light",
				"uiTheme": "vs",
				"path": "./themes/zughy-light.json"
			},
			{
				"label": "Turtle Theme - Monokai Dark",
				"uiTheme": "vs-dark",
				"path": "./themes/monokai-dark.json"
			},
			{
				"label": "Turtle Theme - Monokai Light",
				"uiTheme": "vs",
				"path": "./themes/monokai-light.json"
			}
		]
	},
	"devDependencies": {
		"@types/bun": "^1.3.2",
		"@types/node": "^24.10.1",
		"@vscode/vsce": "^3.7.0",
		"ovsx": "^0.10.6",
		"puppeteer": "^24.30.0",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"build": "bun src/theme-builder",
		"pack": "npm run build && mkdir -p bin && vsce package -o bin/turtle-theme.vsix",
		"publish-all": "npm run build && bun run publish-ms && bun run publish-oss",
		"publish-ms": "vsce publish",
		"publish-oss": "ovsx publish",
		"dogfood": "vsce pack -o bin/turtle-theme.vsix && code --install-extension bin/turtle-theme.vsix --force"
	}
}
